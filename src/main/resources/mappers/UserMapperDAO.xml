<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mybatis.dao.UserMapperDAO">  <!--对应DAO的目录-->
    <select id="findByUserAndPass" resultType="com.mybatis.domain.User">
        SELECT id, username, passwd from userDemo  where username =#{username} and password =#{password} limit 1;
    </select>
</mapper>